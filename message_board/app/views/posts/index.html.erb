<p id="notice"><%= notice %></p>

<h1>All Posts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date Posted</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Post', new_post_path, :class => 'btn btn-primary' %>
