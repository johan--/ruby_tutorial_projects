<p id="notice"><%= notice %></p>

<p>
<h2>
<%= @post.title %>
</h2>
</p>

<p>
  <span>posted by:</span> <%= @post.user.email %>
  <br>
  <span>on:</span> <%= time_tag @post.created_at %>
</p>
<br>
<p>
  <%= @post.content %>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Replies</th>
      <th>User</th>
      <th>Posted on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post.replies.each do |reply| %>
      <tr>
        <td><%= reply.content %></td>
        <td><%= reply.user.email %></td>
        <td><%= time_tag reply.post.created_at %></td>
        <td><%= link_to 'Show', post_replies_path(reply) %></td>
        <td><%= link_to 'Edit', edit_post_reply_path(reply.post, reply) %></td>
        <td><%= link_to 'Destroy', post_reply_path(reply.post, reply), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Reply', new_post_reply_path(@post) , :class => "btn btn-info"%>

<br>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |
<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
