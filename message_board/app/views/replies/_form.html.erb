<%= form_for [@post, @reply] do |f| %>
  <% if @reply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reply.errors.count, "error") %> prohibited this reply from being saved:</h2>

      <ul>
      <% @reply.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inline">
    <div class="form-group">
      <%= f.label :content, 'New Reply', :class => 'col-md-8' %><br>
      <div class="col-md-8">
        <%= f.text_area :content, :cols => 40, :rows => 5 %>
      </div>
    </div>
    <div class="actions">
      <div class="col-md-8">
        <%= f.submit 'Reply', :class=> 'btn btn-primary'%>
      </div>
    </div>
  </div>
<% end %>
